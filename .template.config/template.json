{
    "$schema": "http://json.schemastore.org/template",
    "author": "Maksym Libovych",
    "name": "Revit Solution",
    "shortName": "revit-solution",
    "identity": "RevitSolutionTemplate",
    "defaultName": "RevitSolutionTemplate",
    "sourceName": "RevitSolutionTemplate",
    "description": "Template for creating a Revit solution plugin",
    "classifications": [
      "Library",
      "Revit",
      "AddIn",
      "Solution"
    ],
    "tags": {
      "type": "project",
      "language": "C#",
      "platform": ".NET"
    },
    "preferNameDirectory": true,
    "symbols": {
      "RevitCommandName":{
        "displayName": "Revit Command Name",
        "type": "parameter",
        "datatype":"text",
        "description": "The name for revit external command.",
        "defaultValue": "ExternalCommand",
        "replaces": "RevitCommand",
        "fileRename": "RevitCommand"
      }
    },
    "sources": [
      {
        "include": [
          "src/**",
          "tests/**",
          "publish/**",
          "framework/**"
        ],
        "exclude": [
          "**/[Bb]in/**",
          "**/[Oo]bj/**",
          ".template.config/**/*",
          "**/*.filelist",
          "**/*.user",
          "**/*.lock.json"
        ]
      }
    ]
  }