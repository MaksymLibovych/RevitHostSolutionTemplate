<Window x:Class="RevitSolutionTemplate.RevitCommand.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModels="clr-namespace:RevitSolutionTemplate.RevitCommand.ViewModels"
        xmlns:views="clr-namespace:RevitSolutionTemplate.RevitCommand.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        WindowStartupLocation="CenterScreen">

    <ContentControl Content="{Binding CurrentViewModel}">
        <ContentControl.Resources>
            <DataTemplate DataType="{x:Type viewModels:RevitCommandViewModel}">
                <views:RevitCommandUserControl/>
            </DataTemplate>
        </ContentControl.Resources>
    </ContentControl>

</Window>
